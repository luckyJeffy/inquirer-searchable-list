{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["main", "next", "test", "v*"]
    },
    "publish": {
      "message": "chore: publish new version"
    }
  },
  "ignoreChanges": ["**/__tests__/**", "**/package-lock.json"]
}
